<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/temperatureNow"
        android:layout_width="165dp"
        android:layout_height="122dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="27dp"
        android:gravity="center"
        android:text="@string/temperature"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/pressureNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pressure"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/pressure"
        android:gravity="center"
        android:text="@string/pressureNow"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/windNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/wind"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/wind"
        android:gravity="center"
        android:text="@string/windNow"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/humidityNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/humidity"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/humidity"
        android:gravity="center"
        android:text="@string/humidityNow"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/overcastNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/overcast"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/overcast"
        android:gravity="center"
        android:text="@string/overcastNow"
        android:textSize="22sp" />

    <TextClock
        android:id="@+id/timeNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:format24Hour="dd.MMM yyyy                    k:mm"
        android:format12Hour="@null"
        android:textSize="42sp" />


    <TextView
        android:id="@+id/selectedCity"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_below="@+id/timeNow"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/pressure"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wind"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/pressure" />

    <CheckBox
        android:id="@+id/wind"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overcast"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/wind" />

    <CheckBox
        android:id="@+id/humidity"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temperatureNow"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/humidity" />

    <CheckBox
        android:id="@+id/overcast"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/humidity"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/overcast" />

    <Button
        android:id="@+id/aboutCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pressure"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="30dp"
        android:text="@string/about_city" />

</RelativeLayout>